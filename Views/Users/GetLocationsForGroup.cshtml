@model inReachWebRebuild.ViewModels.LocationsViewModel

@foreach (var l in Model.Locations)
{
    <div class="list" data-uri="@l.UserId" id="@($"lstItem_{l.UserId}")">

        @if (l.UserImage == null)
        {
            <img src="../../content/images/person.png" class="list-icon">
            <span class="list-title">@l.Name</span>
        }
        else
        {
            <img src="data:image;base64,@Convert.ToBase64String(l.UserImage)" class="list-icon">
            <span class="list-title">@l.Name</span>
        }

    </div>
}